<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <%= link_to image_tag("popcorn.png", width: 30, height: 30, class: "d-inline-block align-top"), root_path, class: "navbar-brand" %>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav align-right">
            <%= link_to "My Lists", lists_path, class: "nav-item nav-link" %>
            <%= link_to "New List", new_list_path, class: "nav-item nav-link" %>
        </div>
    </div>
</nav>

<!-- Banner -->
<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4">Welcome to Movie List</h1>
        <p class="lead">Your favourite movies, all in one place.</p>
    </div>
</div>
<!-- Lists -->
<div class="container">
    <div class="row justify-content-center">
        <% @lists.each do |list| %>
            <div class="col-sm-4">
                <div class="card mb-4">
                    <%= image_tag list.movies.first.poster_url, class: "card-img-top", alt: "Card image cap" %>
                    <div class="card-body">
                        <h5 class="card-title"><%= list.name %></h5>
                        <p class="card-text"><%= list.movies.first.overview %></p>
                        <p class="card-text"><small class="text-muted">Rating: <%= list.movies.first.rating %></small></p>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
    <!-- Create New List button -->
    <div class="mt-4 text-center">
        <%= link_to "Create New List", new_list_path, class: "btn btn-primary" %>
    </div>
</div>
